<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="64dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvBigtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prácticas Android"
        android:textSize="28dp"
        />

    <LinearLayout
        android:id="@+id/llPractica1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvBigtitle"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 1"/>

        <ImageButton
            android:layout_width="wrap_content"
            app:tint="@color/grey"
            android:layout_marginLeft="230dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/checkboxLayout"
        android:layout_marginBottom="5dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 2"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_height="10dp"
            app:tint="@color/grey"
            android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/checkboxLayout2"
        android:layout_marginBottom="5dp"
        android:background="#DDDDDD" />

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


